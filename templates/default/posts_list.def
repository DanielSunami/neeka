{{var fecha =  require('fecha');}}
{{~it.posts :post:index}}
	<div class="post-container">
		<h3 class="post-title"><a href="/{{=fecha.format(post.created_on, 'url')}}/{{=post.slug}}">{{=post.title}}</a></h3>
		<div class="post-date"><small>{{=fecha.format(post.created_on, 'brazilian')}} | <a href="{{=post.author.website}}">{{=post.author.fullName}}</a></small></div>
		<div class="post">
			{{=post.preview}}...
		</div>
	</div>
	{{? it.posts.length-1 != index }}
		<hr class="post-separator"/>
	{{?}}
{{~}}
{{? it.hasNext }}
 <a href="?page={{=it.page+1}}"> > </a>
{{?}}