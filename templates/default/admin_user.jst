<!DOCTYPE html>
<html>
<head>
	{{#def.admin_head}}
</head>
<body>
<div class="page-wrap">
	{{#def.admin_header}}
	<div class="container">
		<div class="max-width-4 mx-auto">

			<div class="clearfix mxn1">
				<div class="sm-col sm-col-12 px1 my2">
					<div class="table">
						<!-- table header -->
						<div class="clearfix table-row header">
							<div class="sm-col cell" style="width: 15%">Firstname</div>
							<div class="sm-col cell" style="width: 15%">Lastname</div>
							<div class="sm-col cell" style="width: 30%">Email</div>
							<div class="sm-col cell" style="width: 15%">Created On</div>
							<div class="sm-col cell" style="width: 15%">Last Update</div>
							<div class="sm-col cell" style="width: 10%">Edit</div>
						</div>
						<!-- rows -->
						{{var fecha =  require('fecha');}}
						{{~it.users :user:index}}
						<div class="clearfix table-row">
							<div class="sm-col cell" style="width: 15%">{{=user.firstname}}</div>
							<div class="sm-col cell" style="width: 15%">{{=user.lastname}}</div>
							<div class="sm-col cell" style="width: 30%">{{=user.email}}</div>
							<div class="sm-col cell" style="width: 15%">{{=fecha.format(user.created_on, 'regular')}}</div>
							<div class="sm-col cell" style="width: 15%">{{=fecha.format(user.last_update, 'regular')}}</div>
							<div class="sm-col cell" style="width: 10%">
								<a href="/admin/user/{{=user._id}}">
									<i class="material-icons">edit</i>
								</a>
							</div>
						</div>
						{{~}}
					</div>
				</div>
			</div>

			<form method="POST" name="user" action="/admin/user/"> 
				<input type="hidden" name="id"/>
								
				<div class="clearfix mxn1">
					<div class="sm-col sm-col-12 px1 my2">
						<div class="table">
							<!-- table header -->
							<div class="clearfix table-row header">
								<div class="sm-col sm-col-12 cell center" style="padding-left: 0">New User</div>
							</div>

							<div class="clearfix">
								<div class="sm-col sm-col-6 px1">
									<div class="form-group">
										<label>Firstname
										<input type="text" name="firstname"/></label>
									</div>
								</div>
								<div class="sm-col sm-col-6 px1">
									<div class="form-group">
										<label>Lastname
										<input type="text" name="lastname"/></label>
									</div>
								</div>
							</div>
							<div class="clearfix">
								<div class="sm-col sm-col-6 px1">
									<div class="form-group">
										<label>Website
										<input type="text" name="website"/></label>
									</div>
								</div>
								<div class="sm-col sm-col-6 px1">
									<div class="form-group">
										<label>Birthday
										<input type="text" name="birthday"/></label>
										<small>day-month-year - 21/01/1990 </small>
									</div>
								</div>
							</div>
							<div class="clearfix">
								<div class="sm-col sm-col-6 px1">
									<div class="form-group">
										<label>Email
										<input type="text" name="email"/></label>
									</div>
								</div>
								<div class="sm-col sm-col-6 px1">
									<div class="form-group">
										<label>Password
										<input type="password" name="password"/></label>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				
				<div>
					<div class="clearfix">
						<button id="btn-save" class="green col-right col-3 mx1 ld ld-ext-right">
							Save
							<div class="ld ld-ring ld-cycle" style="font-size: 1.6em;"></div>
						</button>
					</div>
				</div>
			</form>
		</div>
	</div>
	
</div>
	{{#def.footer}}
	<script type="text/javascript" src="/assets/lib/prism.js"></script>
	<script src="/assets/lib/serialize.min.js"></script>
	<script type="text/javascript" src="/assets/lib/alertify.min.js"></script>
	<script type="text/javascript">
	

		[].map.call(document.querySelectorAll('form input'), function(input){
			input.onkeypress = function(e) {if ( e.which == 13 ) e.preventDefault();}
		});

	</script>
</body>
</html>